<%= render 'layouts/navbar' %>
<h1 class="text-center all-user">ALL USERS</h1>
<% if users.any? %>
    <div class="container">
        <div class="row"> 
            <% users.each do |user| %>
                <div class="col-3 offset-1 border-bottom">
                    <% if user.image? %>
                        <%= link_to user_path(user) do %>
                            <%= image_tag user.image.url, class: 'user-pro-img', alt: 'profile画像' %>
                        <% end %>
                    <% else %>
                        <%= link_to user_path(user) do %>
                            <%= image_tag "/assets/default.png", class: 'user-pro-img', alt: 'profile画像' %>
                        <% end %>
                    <% end %>
                </div>
                <!--- profile画像ここまで -->
                <div class="col-8 margin-post border-bottom">
                    <div class="row">
                        <div class="col-2">
                            <%= link_to user.name, user_path(user)%>
                        </div>
                        <div class="col-5 offset-1">
                            <%= render 'relationships/follow_button', user: user %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="paginate">
            <%= paginate users %>
        </div>
    </div>
<% end %>
