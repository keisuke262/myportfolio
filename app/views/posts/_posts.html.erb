<div class="container">
  <ul>
  <% if posts.present? %> 
    <% posts.each do |post| %>
      <li class="row border-bottom">
        <div class="col-3">
          <% if post.user.image? %>
            <%= image_tag post.user.image.url, class: 'user-pro-img', alt: 'profile画像' %>
          <% else %>
            <%= image_tag "/assets/default.png", class: 'user-pro-img', alt: 'profile画像' %>
          <% end %>
        </div>
        <!--- profile画像ここまで -->
        <div class="col-9 margin-post">
          <%= link_to post.user.name, user_path(post.user)%>
          <span class="text-muted">posted at <%= post.created_at %></span>
          <div class="black"><%= post.content %></div>
          <div class="row varius-btn">
            <% if current_user == post.user %>
              <div class="col-2">
                <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this Post ?" }, class: 'btn btn-danger btn-sm' %>
              </div>
              <div class="col-2 offset-1">
                <%= link_to "Edit", edit_post_path(post), class: 'btn btn-info btn-sm edit-btn' %>
              </div>
            <% end %>
            <div class="col-2 offset-1 like-unlike-button">
              <%= render 'favorites/favorite_button', post: post %>
            </div> 
          </div>
          <!-- rowここまで -->
        </div>
        <!-- col-11ここまで -->
      </li>
    <% end %>
  <% end %>
  </ul>
</div>

  
